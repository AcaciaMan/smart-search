{
  "name": "smart-search-ripsolr",
  "displayName": "Smart Search with Ripgrep and Solr",
  "description": "Intelligent VS Code extension for contextual search with ripgrep, Solr indexing, AI summaries, and advanced field-specific query syntax",
  "keywords": [
    "search",
    "ripgrep",
    "solr",
    "indexing",
    "ai",
    "intelligent",
    "contextual",
    "advanced",
    "field-specific",
    "query",
    "syntax",
    "summaries",
    "code search",
    "text search",
    "full-text",
    "lucene",
    "grep",
    "find",
    "discover"
  ],
  "version": "2.1.0",
  "publisher": "manacacia",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/AcaciaMan/smart-search.git"
  },
  "bugs": {
    "url": "https://github.com/AcaciaMan/smart-search/issues"
  },
  "homepage": "https://github.com/AcaciaMan/smart-search#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:smart-search.search",
    "onView:smartSearch.searchView",
    "onView:smartSearch.liveTools",
    "onView:smartSearch.sessionTools",
    "onView:smartSearch.recentSearchView",
    "onView:smartSearch.configCheck"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-search.search",
        "title": "Smart Search",
        "category": "Smart Search",
        "icon": "$(search)"
      },
      {
        "command": "smart-search.showRipgrepResults",
        "title": "Show Ripgrep Results",
        "category": "Smart Search",
        "icon": "$(search-view)"
      },
      {
        "command": "smart-search.showSolrResults",
        "title": "Show Solr Results",
        "category": "Smart Search",
        "icon": "$(database)"
      },
      {
        "command": "smart-search.saveCurrentSearchAsFilter",
        "title": "Save Current Search as Filter",
        "category": "Smart Search",
        "icon": "$(save)"
      },
      {
        "command": "smart-search.chooseFilterForCurrentSearch",
        "title": "Choose Search Filter",
        "category": "Smart Search",
        "icon": "$(filter)"
      },
      {
        "command": "smart-search.openRefinementPanel",
        "title": "Open Search Refinement Panel",
        "category": "Smart Search",
        "icon": "$(list-tree)"
      }
    ],
    "keybindings": [
      {
        "command": "smart-search.search",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f"
      }
    ],
    "views": {
      "smartSearch": [
        {
          "id": "smartSearch.searchView",
          "name": "Search",
          "type": "webview",
          "icon": "$(search)"
        },
        {
          "id": "smartSearch.liveTools",
          "name": "Live Tools",
          "type": "webview",
          "icon": "$(tools)"
        },
        {
          "id": "smartSearch.sessionTools",
          "name": "Session Tools",
          "type": "webview",
          "icon": "$(database)"
        },
        {
          "id": "smartSearch.recentSearchView",
          "name": "Recent Searches",
          "type": "webview",
          "icon": "$(history)"
        },
        {
          "id": "smartSearch.configCheck",
          "name": "Health Check",
          "type": "webview",
          "icon": "$(pulse)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "smartSearch",
          "title": "Smart Search",
          "icon": "resources/smart-search-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Smart Search",
      "properties": {
        "smart-search.solrUrl": {
          "type": "string",
          "default": "http://localhost:8983/solr",
          "description": "Solr server URL for indexing"
        },
        "smart-search.enableAISummaries": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered search result summaries"
        },
        "smart-search.maxFiles": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of files to include in search results (0 = no limit)"
        },
        "smart-search.defaultSolrFields": {
          "type": "string",
          "default": "content_all,code_all",
          "description": "Default Solr fields to search in (comma-separated). Users can still specify custom field queries like 'file_name:*.js'"
        },
        "smart-search.maxParallelFolders": {
          "type": "number",
          "default": 5,
          "description": "Maximum number of workspace folders to search in parallel (1-10). Higher numbers may improve performance but use more system resources."
        },
        "smart-search.enableDebugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for multi-folder search operations"
        },
        "smart-search.ripgrepPath": {
          "type": "string",
          "default": "",
          "description": "Optional: full path to a custom ripgrep executable. Leave empty to use 'rg' from your system PATH."
        },
        "smart-search.filters.globalFilters": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "default": [],
          "scope": "application",
          "description": "Named search filter presets available across all workspaces (global scope)."
        },
        "smart-search.filters.workspaceFilters": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "default": [],
          "scope": "resource",
          "description": "Named search filter presets scoped to the current workspace or folder."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "webpack && npm run copy-resources",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "copy-resources": "xcopy /E /I /Y src\\webview dist\\webview && xcopy /E /I /Y resources dist\\resources",
    "build": "npm run package && npm run copy-resources",
    "configure-solr": "scripts\\configure-solr-highlighting.bat",
    "configure-solr-unix": "bash scripts/configure-solr-highlighting.sh",
    "test-solr": "scripts\\test-solr-config.bat",
    "test-solr-unix": "bash scripts/test-solr-config.sh"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.4",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
